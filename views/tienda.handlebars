<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="/style/main.css" />
    <link rel="stylesheet" href="https://use.typekit.net/umy6dwm.css">
    <title>Tienda</title>
</head>

<body>

    <nav class="navbar">
        <section class="navbar__container">
            <img class="navbar__container__logo" src="/imagenes/logo_artesania.png">
            <ul class="navbar__container__items">
                <li class="navbar__container__items__list">
                    <img src="./imagenes/search.png">
                </li>

                <li class="navbar__container__items__list">
                    <img src="./imagenes/perfil.png">
                </li>

                <li class="navbar__container__items__list">
                    <img src="./imagenes/favorite.png">
                </li>

                <li class="navbar__container__items__list">
                    <img src="./imagenes/shoppingBag.png">
                </li>

            </ul>
        </section>
    </nav>

    <header class="background">
        <section class="background__store">
            <p class="background__store__tittle">PRODUCTOS ARTESANÍAS DE COLOMBIA</p>
        </section>
    </header>

    <label>CATEGORÁ</label>
    <select>
        <a>
            <option value="todo">Todo</option>
        </a>
        <a>
            <option value="hogar">Hogar</option>
        </a>
        <a>
            <option value="accesorios">Accesorios</option>
        </a>
        <a>
            <option value="oficina">Oficina</option>
        </a>
    </select>

    <label>MATERIAL</label>
    <select class="material">
        <option>Todo</option>
        <option Madera</option>
        <option>Fique</option>
        <option>Madera</option>
        <option>Molas</option>
        <option>Palo Sangre</option>
        <option>Hilos de Algodón</option>
        <option>Chaquiras</option>
        <option>Mopa Mopa</option>

        <!-- 
        <option href="/tienda?material=">Todo</option>
        <option >Madera</option>
        <option href="/tienda?material=Fique">Fique</option>
        <option href="/tienda?material=Madera">Madera</option>
        <option ><a href="/tienda?material=Molas">Molas</a></option>
        <option ><a href="/tienda?material=Palode Sangre">Palo Sangre</a></option>
        <option ><a href="/tienda?material=Hilos de Algodón">Hilos de Algodón</option>
        <option ><a href="/tienda?material=Chaquiras">Chaquiras</a></option>
        <option ><a href="/tienda?material=Mopa Mopa">Mopa Mopa</a></option>
        -->
    </select>

    <label>PRECIO</label>
    <select>
        <a>
            <option value="todo">Todo</option>
        </a>
        <a>
            <option value="precio">50 a 100</option>
        </a>
        <a>
            <option value="precio">100 a 200</option>
        </a>
        <a>
            <option value="precio">200 a 300</option>
        </a>
        <a>
            <option value="precio">Más de 300</option>
        </a>
    </select>

    <section class="container">

        <section class="products">

            {{#each products}}
            <a href="/tienda?producto={{titulo}}">
                <section class="products__crafts">

                    <img src="{{img}}">
                    <p>{{titulo}}</p>
                    <p>{{precio}} </p>
                    <a> <button>AÑADIR AL CARRITO</button></a>
                </section>
            </a>

            {{/each}}

        </section>
    </section>



    <script src="/style/filtro.js"></script>

</body>

</html>