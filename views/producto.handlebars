                <li class="navbar__container__items__list">
                    <img src="./imagenes/shoppingBag.png">
                </li>
                
            </ul>
        </section>
    </nav>

    <section class="container">
        <article class="container__img">

            <section class="container__img__name">
                <h1>{{titulo}}</h1>
                <h1>{{precio}}</h1>
            </section>

            <section class="container__img__product">
                <img src="{{img}}">
            </section>

        </article>
        <article class="container__info">

            <section  class="container__info__text">
                <p>{{descripcion}}</p>
                <p> Categoria: {{categoria}} </p>

            </section>

